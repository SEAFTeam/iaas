{{#items}}
    {{entity}}.{{metadata.uid}}:
        id: {{metadata.uid}}
        safeID: {{safeID}}
        title: {{metadata.name}}
        capacity: {{spec.capacity.storage}}
        volume_mode: {{spec.volume_mode}}
        host_path: {{spec.host_path.path}}
