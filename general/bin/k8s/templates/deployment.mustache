{{#items}}
    {{entity}}.{{metadata.uid}}:
        id: {{metadata.uid}}
        safeID: {{safeID}}
        name: {{metadata.name}}
        {{#metadata.labels}}
        labels:
        {{#iterator}}
            @kv{{{.}}}
        {{/iterator}}
        {{/metadata.labels}}
        namespace: {{parent.entity}}.{{parent.item.metadata.uid}}
        namespace-name: {{parent.item.metadata.name}}
        update_strategy: {{spec.strategy.type}}
        replicas: {{spec.replicas}}
        containers:
        {{#spec.template.spec.containers}}
            -  name: {{name}}
               image: {{image}}
               imagePullPolicy: {{image_pull_policy}}
               ports:
            {{#ports}}
                 -  name: {{name}}
                    protocol: {{protocol}}
                    port: {{container_port}}
            {{/ports}}
               mounts:
            {{#volume_mounts}}
                 -  name: {{name}}
                    path: {{mount_path}}
            {{/volume_mounts}}
        {{/spec.template.spec.containers}}
        volumes:
        {{#spec.template.spec.volumes}}
            -  name: {{name}}
        {{/spec.template.spec.volumes}}
{{/items}}
